<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <Button
        android:id="@+id/power"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="331dp"
        android:background="@drawable/ic_twotone_power_settings_new_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/ControlButtonsSpace"
        android:background="@drawable/ic_contols"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="@+id/ok"
        app:layout_constraintStart_toStartOf="@+id/ok"
        app:layout_constraintTop_toTopOf="@+id/ok" />

    <Button
        android:id="@+id/left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="@dimen/ControlButtonsSpace"
        android:background="@drawable/ic_contols"
        android:rotation="135"
        app:layout_constraintBottom_toBottomOf="@+id/ok"
        app:layout_constraintEnd_toEndOf="@+id/ok"
        app:layout_constraintTop_toTopOf="@+id/ok" />

    <Button
        android:id="@+id/up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/ic_contols"
        android:rotation="225"
        app:layout_constraintBottom_toBottomOf="@+id/ok"
        app:layout_constraintEnd_toEndOf="@+id/ok"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ok" />

    <Button
        android:id="@+id/right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:background="@drawable/ic_contols"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="@+id/ok"
        app:layout_constraintStart_toStartOf="@+id/ok"
        app:layout_constraintTop_toTopOf="@+id/ok"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ok"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_okexport"
        android:rotation="-45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="139dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/power"
        app:layout_constraintStart_toEndOf="@+id/power"
        app:layout_constraintTop_toTopOf="@+id/power" />

    <Button
        android:id="@+id/numberSend"
        android:layout_width="77dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Send Number"
        app:layout_constraintBottom_toBottomOf="@+id/numberInput"
        app:layout_constraintStart_toEndOf="@+id/numberInput"
        app:layout_constraintTop_toTopOf="@+id/numberInput" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/Grey"
        android:text="info"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberInput" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/Grey"
        android:text="Exit"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info"
        app:layout_constraintTop_toTopOf="@+id/info"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/Grey"
        android:text="Mute"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/down" />

    <Button
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Grey"
        android:text="Input"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mute"
        app:layout_constraintTop_toTopOf="@+id/mute" />

    <Button
        android:id="@+id/blue"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:backgroundTint="#00E2FF"
        android:text="••••"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yellow"
        app:layout_constraintTop_toTopOf="@+id/yellow" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFDD00"
        android:text="•••"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/green"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="@+id/green" />

    <Button
        android:id="@+id/green"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:backgroundTint="#219A00"
        android:text="••"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/red"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="@+id/red" />

    <Button
        android:id="@+id/red"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DF0000"
        android:text="•"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mute" />

</androidx.constraintlayout.widget.ConstraintLayout>